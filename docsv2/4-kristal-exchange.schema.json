{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kristal.org/schemas/kristal-exchange-0.1.schema.json",
  "title": "Kristal Exchange v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "kristal_id", "manifest", "entities"],
  "properties": {
    "schema_version": { "type": "string", "const": "0.1" },
    "kristal_id": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" },
    "manifest": { "$ref": "#/$defs/manifest" },
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/entity" }
    },
    "unresolved": {
      "type": "array",
      "items": { "$ref": "#/$defs/unresolved_entry" }
    },
    "evidence_pack_ref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pack_id": { "type": "string" },
        "uri": { "type": "string", "format": "uri" }
      }
    }
  },
  "$defs": {
    "qid": { "type": "string", "pattern": "^Q[1-9][0-9]*$" },
    "pid": { "type": "string", "pattern": "^P[1-9][0-9]*$" },
    "lang": { "type": "string", "pattern": "^[a-z]{2}(-[A-Z]{2})?$" },

    "manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "created_at", "validation_status"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "domain": { "type": "array", "items": { "type": "string" } },
        "created_by": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "source_summary": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "source_url": { "type": "string", "format": "uri" },
              "source_id": { "type": "string" },
              "retrieved_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "validation_status": {
          "type": "string",
          "enum": ["passed", "partial", "failed"]
        },
        "confidence_summary": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "mean": { "type": "number", "minimum": 0, "maximum": 1 },
            "min": { "type": "number", "minimum": 0, "maximum": 1 },
            "max": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "signatures": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "value"],
            "properties": {
              "type": { "type": "string", "enum": ["pgp", "x509", "ed25519"] },
              "value": { "type": "string" },
              "signer": { "type": "string" },
              "created_at": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    },

    "entity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "claims"],
      "properties": {
        "id": {
          "oneOf": [
            { "$ref": "#/$defs/qid" },
            { "type": "string", "pattern": "^local:[A-Za-z0-9._-]+$" }
          ]
        },
        "labels": { "$ref": "#/$defs/lang_map_string" },
        "descriptions": { "$ref": "#/$defs/lang_map_string" },
        "aliases": { "$ref": "#/$defs/lang_map_string_array" },
        "claims": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^P[1-9][0-9]*$": {
              "type": "array",
              "items": { "$ref": "#/$defs/statement" }
            }
          }
        }
      }
    },

    "lang_map_string": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]{2}(-[A-Z]{2})?$": { "type": "string" }
      }
    },

    "lang_map_string_array": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]{2}(-[A-Z]{2})?$": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "statement": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mainsnak"],
      "properties": {
        "statement_id": { "type": "string" },
        "rank": { "type": "string", "enum": ["preferred", "normal", "deprecated"] },
        "mainsnak": { "$ref": "#/$defs/snak" },
        "qualifiers": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^P[1-9][0-9]*$": {
              "type": "array",
              "items": { "$ref": "#/$defs/snak" }
            }
          }
        },
        "references": {
          "type": "array",
          "items": { "$ref": "#/$defs/reference" }
        }
      }
    },

    "snak": {
      "type": "object",
      "additionalProperties": false,
      "required": ["property", "snaktype"],
      "properties": {
        "property": { "$ref": "#/$defs/pid" },
        "snaktype": { "type": "string", "enum": ["value", "somevalue", "novalue"] },
        "datatype": { "type": "string" },
        "datavalue": { "$ref": "#/$defs/datavalue" }
      },
      "allOf": [
        {
          "if": { "properties": { "snaktype": { "const": "value" } } },
          "then": { "required": ["datavalue"] }
        }
      ]
    },

    "datavalue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["wikibase-entityid", "string", "time", "quantity", "monolingualtext", "globecoordinate", "url"]
        },
        "value": {}
      }
    },

    "reference": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "evidence_id": { "type": "string" },
        "snaks": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^P[1-9][0-9]*$": {
              "type": "array",
              "items": { "$ref": "#/$defs/snak" }
            }
          }
        }
      },
      "anyOf": [
        { "required": ["evidence_id"] },
        { "required": ["snaks"] }
      ]
    },

    "unresolved_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "surface"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["subject", "predicate", "object_item", "literal_parse"]
        },
        "surface": { "type": "string" },
        "lang": { "$ref": "#/$defs/lang" },
        "candidates": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "score"],
            "properties": {
              "id": { "type": "string" },
              "score": { "type": "number", "minimum": 0, "maximum": 1 },
              "label": { "type": "string" }
            }
          }
        },
        "notes": { "type": "string" }
      }
    }
  }
}
